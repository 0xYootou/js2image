#!/usr/bin/env node


var ImageToJS = require('../index.js')
var path = require("path");
var argv = require('minimist')(process.argv.slice(2));
var source = argv.s;
var image = argv.i || path.join(__dirname,"../resource/tree.png");
var out = argv.o || source.replace(".js",".xmas.js");
var reverse = (argv.r=="true"?true:false);

ImageToJS.writeToFile(source,image,out,{reverse:reverse}).then(function(code){

});

